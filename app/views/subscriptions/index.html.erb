<div class="my-4 p-4">
  <div class="background" style="background: linear-gradient(rgba(255,255,255,0.8), rgba(255,255,255,0.8)), url(<%= image_path('background.jpg')%>); background-size: cover">
    <h1 class="text-center">Dashboard</h1>

            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search" action="<%= subscriptions_path %>" method="get">
              <div class="btn-group me-2 mb-0 pb-0 mt-2">
                <input type="search" name="query" class="form-control form-control-light text-bg-light" placeholder="Search..." aria-label="Search">
                <button type="submit" class="btn btn-outline-primary me-2">Search</button>
              </div>
            </form>

    <div class="d-grid gap-2 gap-md-3 d-md-block">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-2 pb-0 mb-0 border-bottom">
      <%= link_to "Add a new subscription", new_subscription_path, class: "btn btn-primary btn-sm mt-4 justify-content-start" %>
        <div class="btn-toolbar mb-0 mb-md-0">
          <div class="btn-group me-1 mb-0 pb-0 mt-2">
            <h2><%= link_to 'Export to XLSX', export_subscriptions_path(format: :xlsx), class: 'btn btn-sm btn-outline-primary' %></h2>
            <h2><%= link_to 'Export to PDF', export_pdf_subscriptions_path(format: :pdf), class: 'btn btn-sm btn-outline-primary' %></h2>
          </div>
        </div>
      </div>
    </div>
  </div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Description</th>
      <th>URL</th>
     <!-- <th>Frequency</th> -->
      <th>Payment date</th>
      <th>Price</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= link_to subscription.company_name, subscription_path(subscription), class: "text-decoration-none" %></td>
        <td><%= subscription.description %></td>
        <td><%= subscription.url %></td>
       <!-- <td><%= subscription.frequency %></td> -->
        <td><%= subscription.payment_date %></td>
        <td><%= number_to_currency(subscription.price) %></td>
        <td><%= subscription.category.capitalize %></td>
        <td>
          <%= link_to edit_subscription_path(subscription), class: "btn btn-sm btn-outline-primary mr-1" do %>
          <i class="fa-regular fa-pen-to-square"></i>
          <% end %>
         <%= link_to subscription_path(subscription), method: :delete, data: { confirm: "Are you sure you want to delete this subscription?" }, class: "btn btn-sm btn-primary" do %>
          <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
