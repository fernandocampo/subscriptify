<h1>Subscriptions#index</h1>

<div class="container text-center">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
    <% @subscriptions.each do |subscription| %>
      <div class="col">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <p><%= subscription.company_name %></p>
            <p><%= subscription.description %></p>
            <p><%= subscription.url %></p>
            <p><%= subscription.recurrent %></p>
            <p><%= subscription.frequency %></p>
            <p><%= subscription.payment_date %></p>
            <p><%= subscription.price %></p>
            <p><%= subscription.currency %></p>
            <p><%= subscription.category %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nombre de la empresa</th>
      <th>Descripción</th>
      <th>URL</th>
      <th>Recurrente</th>
      <th>Frecuencia</th>
      <th>Fecha de pago</th>
      <th>Precio</th>
      <th>Moneda</th>
      <th>Categoría</th>
    </tr>
  </thead>
  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.company_name %></td>
        <td><%= subscription.description %></td>
        <td><%= subscription.url %></td>
        <td><%= subscription.recurrent %></td>
        <td><%= subscription.frequency %></td>
        <td><%= subscription.payment_date %></td>
        <td><%= subscription.price %></td>
        <td><%= subscription.currency %></td>
        <td><%= subscription.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>
