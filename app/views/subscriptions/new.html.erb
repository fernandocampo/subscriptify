<div class="my-4 p-4 shadow bg-white">
  <h1  class="text-center">Add New Subscription</h1>
  <%= simple_form_for @subscription do |f| %>
    <div data-controller="change-class">
      <div data-change-class-target="company">
        <%= f.input :company_name, input_html: {data: {change_class_target:"name", action: "keyup->change-class#nameEmpty"}  }%>
        <%= f.input :description %>
        <%= f.input :url %>
        <div class="d-flex justify-content-between">
        <%= link_to "Back to Dashboard", subscriptions_path, class: "btn btn-sm btn-outline-primary" %>
        <%= link_to "Next", "#", class: "btn btn-primary", data: {action: "click->change-class#stepOne", change_class_target:"firstBtn"}  %>
        </div>
      </div>
      <div data-change-class-target="payment" class="d-none">
        <%= f.input :payment_date, html5:true %>
        <%= f.input :frequency, collection: Subscription::FREQUENCE %>
        <%= f.input :recurrent %>
        <%= f.input :price %>
        <%= f.input :currency, collection: Subscription::CURRENCIES  %>
        <div class="d-flex justify-content-between">
        <%= link_to "Back to Dashboard", subscriptions_path, class: "btn btn-sm btn-outline-primary" %>
        <%= link_to "Next", "#", class: "btn btn-primary", data: {action: "click->change-class#stepTwo"} %>
        </div>
      </div>

      <div data-change-class-target="category"  class="d-none">
        <%= f.input :category, collection: Subscription::CATEGORIES %>
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
