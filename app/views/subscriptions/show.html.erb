<div class="m-4 p-4">
<h1>Subscriptions show</h1>

<div class="container text-center">

      <div class="col">
        <div class="card mt-5" style="width: 18rem;">
          <div class="card-body">
            <p>Company: <%= @subscription.company_name %></p>
            <p>Description: <%= @subscription.description %></p>
            <p>URL: <%= @subscription.url %></p>
            <p>Recurrent? : <%= @subscription.recurrent %></p>
            <p>Frequency: <%= @subscription.frequency %></p>
            <p>Payment date: <%= @subscription.payment_date %></p>
            <p>Cost: <%= number_to_currency(@subscription.price) %></p>
            <p>Currency: <%= @subscription.currency %></p>
            <p>Category: <%= @subscription.category %></p>
          </div>
        </div>
      </div>
  </div>
</div>

<h4><%= link_to "Edit", edit_subscription_path, class: "btn btn-primary" %></h4>
<h4><%= button_to "Delete", subscription_path(@subscription), method: :delete, data: { confirm: "Are you sure you want to delete this subscription?" }, class: "btn btn-primary" %></h4>
<h4><%= link_to "Back to Dashboard", subscriptions_path, class: "btn btn-primary" %></h4>
<h4><%= link_to "Send Email", custom_email_path, class: "btn btn-primary" %> </h4>
</div>
