<div class="m-4 p-4">
<h1>Subscriptions show</h1>

<div class="container text-center">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
      <div class="col">
        <div class="card mt-5" style="width: 18rem;">
          <div class="card-body">
            <p><%= @subscription.company_name %></p>
            <p><%= @subscription.description %></p>
            <p><%= @subscription.url %></p>
            <p><%= @subscription.recurrent %></p>
            <p><%= @subscription.frequency %></p>
            <p><%= @subscription.payment_date %></p>
            <p><%= number_to_currency(@subscription.price) %></p>
            <p><%= @subscription.currency %></p>
            <p><%= @subscription.category %></p>
          </div>
        </div>
      </div>

  </div>
</div>

  <div class="show-footer">
    <h4><%= link_to "Edit", edit_subscription_path %></h4>
    <h4><%= button_to "Delete", subscription_path(@subscription), method: :delete, data: { confirm: "Are you sure you want to delete this subscription?" }, class: "btn btn-primary" %></h4>
    <h4><%= link_to "Return to dashboard", subscriptions_path %></h4>
  </div>
</div>
