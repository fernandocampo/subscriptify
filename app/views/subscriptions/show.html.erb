<div class="container text-center">
  <div class="my-4 p-4">
    <div class="card mx-auto" style="width: 18rem;">
        <% if @subscription.photo.attached? %>
      <h1><%= image_tag @subscription.photo, style: "max-width: 100%; height: auto;" %></h1>
        <% else %>
          <td><img src="<%= asset_path('Add Photo.png') %>"class="custom-image" style="max-width: 100%; height: auto;"></td>
        <% end %>
        <hr>
      <h1><%= @subscription.company_name %></h1>
        <div class="shadow card-body">
          <!--<p> <%= @subscription.company_name %></p>-->
          <p><%= @subscription.description %></p>
          <p> <%= @subscription.url %></p>
          <!--<p> <%= @subscription.recurrent %></p> -->
          <p> <%= @subscription.frequency %></p>
          <p> <%= @subscription.payment_date %></p>
          <p><%= number_to_currency(@subscription.price) %> <%= @subscription.currency.upcase %></p>
          <p></p>
          <p><%= @subscription.category.capitalize %></p>
          <div class="btn-group" role="group" aria-label="Basic example">

          <%= link_to edit_subscription_path(@subscription), class: "btn btn-sm btn-outline-primary mt-2", style: "height: 100%" do %>
          <i class="fa-regular fa-pen-to-square"></i>
          <% end %>
          <%= button_to subscription_path(@subscription), method: :delete, data: { confirm: "Are you sure you want to delete this subscription?" }, class: "btn btn-sm btn-primary mt-2" do %>
          <i class="fa-solid fa-trash-can"></i>
          <% end %>
      </div>
    </div>
  </div>


    <%= link_to "Back to Dashboard", subscriptions_path, class: "btn btn-outline-primary mt-2 mb-2" %>
</div>
