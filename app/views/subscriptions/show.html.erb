<div class="my-4 p-4">
  <div class="container text-center">
    <div class="card mx-auto" style="width: 18rem;">
        <% if @subscription.photo.attached? %>
      <h1><%= image_tag @subscription.photo, style: "max-width: 100%; height: auto;" %></h1>
        <% else %>

          <td><img src="<%= asset_path('Add Photo.png') %>"class="custom-image" style="max-width: 100%; height: auto;"></td>
        <% end %>
        <hr>
      <h1><%= @subscription.company_name %></h1>
        <div class="shadow card-body">
          <!--<p> <%= @subscription.company_name %></p>-->
          <p> <%= @subscription.url %></p>
          <p><strong>Description</strong> <%= @subscription.description %></p>
          <!--<p> <%= @subscription.recurrent %></p> -->

          <p><strong>Frecuency</strong> <%= @subscription.frequency %></p>
          <p><strong>Payment Date</strong> <%= @subscription.payment_date %></p>
          <p><strong>Price</strong> <%= number_to_currency(@subscription.price) %> <%= @subscription.currency.upcase %></p>
          <p><strong>Category</strong> <%= @subscription.category.capitalize %></p>
          <%# Botones de la card %>
          <div class="btn-group m-2" role="group" aria-label="Basic example">
            <%= link_to edit_subscription_path(@subscription), class: "btn btn-sm btn-outline-primary me-1" do %>
            <i class="fa-regular fa-pen-to-square"></i>
            <% end %>
            <%= button_to subscription_path(@subscription), method: :delete, data: { confirm: "Are you sure you want to delete this subscription?" }, class: "btn btn-sm btn-primary" do %>
            <i class="fa-solid fa-trash-can"></i>
            <% end %>
          </div>

      </div>
    </div>
  </div>



    <%= link_to "Back to Dashboard", subscriptions_path, class: "btn btn-outline-primary mt-2 mb-2" %>

</div>
